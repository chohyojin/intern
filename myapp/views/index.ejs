<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src='http://code.jquery.com/jquery-latest.js'></script>
  </head>
  <body>
    <input type="text" id="msg" />
    <input type="button" id="ajax_test" value="search" />
    <div id="result"></div>
    <div id="result2"></div>
    <div id="result3"></div>



    <script>
    
      $('#ajax_test').click( function() {
      	 
          $('#result').html('');
          
          $.ajax({
              url: 'http://localhost:3000/ajax',
              dataType: 'json',
              type: 'POST',
              data: {'msg':$('#msg').val()},
              success: function(result) {
              	if(result['result'] == false){
              		  $('#result').html("디비에 없습니다");
              		 
					  
				}
				else {
					 console.log(result);
              		 var data = result;

              		 var tag = "<br>"
              		 
                      
					 $('#result').html("user_id : " + data.user_id + tag + " user_name : " + data.user_name + tag +  " device : " + data.device);
				}
					 

                  
              }
          });
      })
    </script>



  </body>
</html>